<div class="container mt-5">

<div class="mb-3 d-flex align-items-end">

<h1 class="p-2">Articles</h1>
  <p class="p-2"> Our blog has <%= Article.public_count %> articles and couting!</p>
</div>

<div class="row">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
    <div class="col-sm-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= article.title%></h5>
            <p class="card-text"><%= article.body%></p>
            <%= link_to 'View Article', article, class: "btn btn-primary" %>
          </div>
        </div>
    </div>
    <% end %>
  <% end %>
</div>

</div>